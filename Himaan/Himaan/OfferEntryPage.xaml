<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Himaan.OfferEntryPage"
             Title="Make an offer!">
   
    <ContentPage.Content>
        <StackLayout>
            <Label Text="From"/>
            <Entry Placeholder=""
                   x:Name="txtFrom"
                    Text="{Binding Text}"
                    HeightRequest="45"/>
            <Label Text="To"/>
            <Entry Placeholder=""
                   x:Name="txtTo"
                    Text="{Binding Text}"
                    HeightRequest="45"/>
            <Label Text="Date"/>
            <DatePicker MinimumDate="01/01/2019"
                        x:Name="dtOfferDate"/>
            <Label Text="Free seats"/>
            <Entry Placeholder=""
                   x:Name="txtFreeSeats"
                    Text="{Binding Text}"/>
            <Label Text="Description"/>
            <Entry Placeholder=""
                   x:Name="txtDescription"
                    Text="{Binding Text}"
                    HeightRequest="50"/>
            <Button Text="Offer a ride!"
                    VerticalOptions="End"
                    Clicked="OnOfferButtonClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>