<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Himaan.SearchPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="From: "/>
            <Entry Placeholder=""
                    x:Name="searchFrom"
                    Text="{Binding Text}"
                    HeightRequest="50"/>

            <Label Text="To: "/>
            <Entry Placeholder=""
                   x:Name="searchTo"
                    Text="{Binding Text}"
                    HeightRequest="50"/>
            <Button Text="Search" 
                    WidthRequest="150"
                    HorizontalOptions="Center"
                    BackgroundColor="LightSeaGreen"
                    Clicked="OnSearchButtonClicked"/>
            <ListView/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>